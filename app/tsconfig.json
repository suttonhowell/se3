{
  "compilerOptions": {
    // MUI compiler options
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitThis": true,
    "strictNullChecks": true,
    // Electron-forge compiler options
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    // "jsx": "preserve",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}